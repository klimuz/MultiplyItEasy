<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/main_background" />

    <LinearLayout
        android:id="@+id/container1u"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container2u"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_back2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_stroke_black95_press_white"
                    android:padding="20dp"
                    android:text="@string/back"
                    android:textAllCaps="false"
                    android:textColor="@color/black95"
                    android:textSize="40sp" />


                <TextView
                    android:id="@+id/text_multiplicand"
                    android:layout_width="285dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="10dp"
                    android:text="@string/multiplicand"
                    android:textColor="@color/red"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/text_multnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="end"
                    android:padding="10dp"
                    android:textColor="@color/red"
                    android:textSize="40sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2u"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/point1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/style_points" />

                <TextView
                    android:id="@+id/point2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/style_points" />

                <TextView
                    android:id="@+id/point3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/style_points" />

                <TextView
                    android:id="@+id/point4"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/style_points" />

                <TextView
                    android:id="@+id/point5"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/style_points" />

                <TextView
                    android:id="@+id/point6"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/style_points" />

                <TextView
                    android:id="@+id/point7"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/style_points" />

                <TextView
                    android:id="@+id/point8"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/style_points" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/line3u"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/multi1"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_gamelevels"
                android:gravity="center"
                android:text="a"
                android:textColor="@color/white"
                android:textSize="70sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sign_mlt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_gamelevels"
                android:gravity="center"
                android:text="X"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/multi2"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_gamelevels"
                android:gravity="center"
                android:text="b"
                android:textColor="@color/red"
                android:textSize="70sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/is"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_gamelevels"
                android:gravity="center"
                android:text="="
                android:textColor="@color/white"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/res"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_gamelevels"
                android:gravity="center"
                android:text="ab"
                android:textColor="@color/white"
                android:textSize="70sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/container4u"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/line1u"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/digit2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="30dp"
                    android:onClick="onClickNum"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/digit3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="30dp"
                    android:onClick="onClickNum"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/digit4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="30dp"
                    android:onClick="onClickNum"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/digit5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="30dp"
                    android:onClick="onClickNum"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="50sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/digit6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="30dp"
                    android:onClick="onClickNum"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/digit7"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="30dp"
                    android:onClick="onClickNum"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/digit8"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="30dp"
                    android:onClick="onClickNum"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/digit9"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="30dp"
                    android:onClick="onClickNum"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="50sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>